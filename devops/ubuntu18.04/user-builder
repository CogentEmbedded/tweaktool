FROM tweak-builder:18.04

ARG USER=builder
ARG UID=1000
ARG GID=1000

RUN groupadd -g $GID -o $USER
RUN useradd -m -u $UID -g $GID -o -s /bin/bash $USER

USER $USER
ENV LANG=en_US.UTF-8

CMD ["/bin/bash"]
